/* pages/article/article.wxss */
.container{
  height: 100vh;
  overflow: scroll;
  background-color: #f5f7f6;
}
.search_box{
  /* width: 750rpx; */
  height: 232rpx;
  background-color: #56d679;
  padding: 76rpx 34rpx 0 ;
  box-sizing: border-box;
}

/* 按阅读量，按时间 */
#sort .van-dropdown-menu{
  height: 82rpx;
  background-color: #f5f7f6;
}
/* #sort .van-ellipsis{
  color: #56d679;
} */

/* 列表展示部分 */
.list{
  padding: 7rpx 36rpx 0;
}
.list .item{
  display: flex;
  justify-content: space-between;
  /* border: 1px solid gray; */
  padding-bottom: 46rpx;
}
.list .last_item{
  padding-bottom: 0;
}
.list .item .item_pic{
  width: 290rpx;
  height: 183rpx;
}
.list .item .item_text{
  width: 364rpx;
  /* background-color: #58bc58; */
  color: #555756;
}
.list .item .item_text .title{
  font-size: 26rpx;
  font-weight: 600;
  color: #010302;
  line-height: 42rpx;
  margin-bottom: 15rpx;

  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .item .item_text .text{
  font-size: 22rpx;
  font-weight: 500;
  line-height: 31rpx;
  width: 364rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.list .item .item_text .reading{
  padding-top: 15rpx;
}
/* 下方加载样式 */
.loading{
  text-align: center;
  padding: 10rpx 0;
}
.hint{
  text-align: center;
  padding: 0 0 10rpx;
  font-size: 26rpx;
  color: #707070;
}
.block{
  height: 50px;
}