/* pages/searchDetails/index.wxss */
.container{
  min-height: 100vh;
  /* background-color: #f5f7f6; */
}
.swiper_image{
  width: 750rpx;
  height: 600rpx;
}


.title_box{
  background-color: #fff;
}
.title_box .title{
  color: #333333;
  font-weight: 700;
  padding: 15rpx 50rpx;
  text-align: left;
  font-size: 30rpx;
  line-height: 40rpx;
}
.title_box .info{
  color: #7e7e7e;
  display: flex;
  text-align: center;
  align-items: center;
  font-size: 24rpx;
  line-height: 60rpx;
}
.title_box .info image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.title_box .info .rolename{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.title_box .info .time{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.content_box {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 50rpx;
}
.content_box .title{
  color: #666666;
  padding: 50rpx 0;
  font-size: 34rpx;
}
.content_box .text{
  color: #8d8d8d;
  text-indent: 2em;
  padding: 0 20rpx;
  font-size: 30rpx;
}
/* 视频展示框 */
.video_box{
  padding: 15rpx 42rpx 20rpx;
}

.video_box .video_item .video{
  width: 100%;
  height: 317rpx;
  position: relative;
}
/* 视频标题 */
.video_box .video_item .bc{
  position: absolute;
  top: 0;
  width: 100%;
  height: 74rpx;
  background-color: rgba(72, 74, 77, 0.5);
}
.video_box .video_item .bc .title{
  color: white;
  font-size: 28rpx;
  line-height: 74rpx;
  padding-left: 30rpx;
}
/* 公司跟发布时间 */
.video_relation_info{
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  height: 60rpx;
  padding-bottom: 20rpx;
  align-items: center;
}
.video_relation_info .company{
  display: flex;
  justify-content: flex-start;
  width: 282rpx;
  padding: 0 6rpx;
  color: #404040;
}
.video_relation_info .company .company_pic{
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  margin-right: 14rpx;
}
.video_relation_info .time{
  padding-right: 6rpx;
  color: #999798;
}