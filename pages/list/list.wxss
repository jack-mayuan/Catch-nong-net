/* pages/list/list.wxss */
.container{
  height: 100vh;
  /* overflow: scroll; */
  background-color: #f5f7f6;
}
.search_box{
  /* width: 750rpx; */
  height: 232rpx;
  background-color: #56d679;
  padding: 76rpx 34rpx 0 ;
  box-sizing: border-box;
}

/* 按时间，按诚信度，按实力 */
#sort .van-dropdown-menu{
  height: 82rpx;
  background-color: #f5f7f6;
}
#sort .van-ellipsis{
  color: #666666;
}
/* 种子公司，苗场，代办，供应链 */
.four_button{
  padding: 40rpx 0;
  position: relative;
}
.four_button .button_box{
  height: 60rpx;
  display: flex;
  justify-content: space-evenly;
  position: relative;
}
.four_button .button_box .button{
  width: 154rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #676767;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}
.four_button .button_box .button image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.four_button .button_box .active{
  background-color: #48d68a;
  color: white;
}

.four_button .options {
  position: absolute;
  right: 17rpx;
  top: 60rpx;
  max-height: 0;
  overflow: hidden;
  transition: max-height .5s;
}

.four_button .open_option {
  max-height: 1000rpx;
  transition: max-height .5s;
}
/* 列表展示部分 */
.list{
  padding: 7rpx 36rpx 0;
}
.list .item{
  display: flex;
  justify-content: space-between;
  /* border: 1px solid gray; */
  /* background-color: rgb(209, 205, 205); */
  padding-bottom: 46rpx;
}
.list .item .item_pic{
  width: 290rpx;
  height: 183rpx;
  padding-top: 8rpx;
}
.list .item .item_text{
  width: 364rpx;
  /* background-color: #58bc58; */
  color: #555756;
}
.list .item .item_text .title{
  font-size: 26rpx;
  font-weight: 600;
  color: #010302;
  line-height: 42rpx;
  margin-bottom: 15rpx;

  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .item .item_text .text{
  font-size: 20rpx;
  font-weight: 500;
  line-height: 33rpx;
  width: 364rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.list .item .item_text .area{
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  font-weight: 500;
  line-height: 33rpx;
  width: 364rpx;
}
.list .item .item_text .area .two_pic{
  display: flex;
  align-items: center;
}
.list .item .item_text .area .two_pic image{
  width: 20rpx;
  height: 20rpx;
} 
.list .item .item_text .area .two_pic .pic1{
  margin-right: 36rpx;
}
.list .item .item_text .area .follow{
  color: #707070;
  position: relative;
}
.list .item .item_text .area .follow .name_card_hold{
  display: flex;
  align-items: center;
} 
.list .item .item_text .area .follow .name_card_hold .chose_color{
  color: #ea9329;
}

.list .item .item_text .area .follow .fold_pic{
  width: 20rpx;
  height: 20rpx;
  margin-left: 6rpx;
}
.list .item .item_text .area .follow .subfollow_box{
  max-height: 0;
  overflow: hidden;
  position: absolute;
  z-index: 100;
  border-radius: 10rpx;
  top: 32rpx;
  right: -20rpx;
  width: 160rpx;
  color: #ea9329;
  background-color: rgb(255, 255, 255);
}
.list .item .item_text .area .follow .open{
  max-height: 1000rpx;
  transition: max-height .5s;
}
.list .item .item_text .area .follow .subfollow_box .subfollow{
  height: 30rpx;
  padding: 10rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e9e6e6;
}
.list .item .item_text .area .follow .subfollow_box .subfollow_hover{
  background-color: lightgray;
}
.list .item .item_text .area .follow .subfollow_box .subfollow image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}


/* 下方加载样式 */
.loading{
  text-align: center;
  padding: 10rpx 0;
}
.hint{
  text-align: center;
  padding: 0 0 10rpx;
  font-size: 26rpx;
  color: #707070;
}
.block{
  height: 50px;
}