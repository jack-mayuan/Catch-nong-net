/* pages/authorization/editauth.wxss */
.container{
  min-height: 100vh;
  background-color: #f5f7f6;
}
.image{
  width: 41rpx !important;
}
.authorize_box{
  padding: 46rpx 26rpx 0;
}
.authorize_box .authorize{
  background-color: #fff;
  width: 698rpx;
  height: 478rpx;
  position: relative;
  /* background-image: url(/images/sqsbg.png); */
}
.authorize_box .authorize .auth_image{
  width: 100%;
  height: 100%;
}
.authorize_box .authorize .auth_content{
  position: absolute;
  top: 35rpx;
  left: 35rpx;
  width: 628rpx;
  height: 408rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 30rpx;
}

.authorize_box .authorize .auth_content .title{
  font-size: 47rpx;
  text-align: center;
}

.authorize_box .authorize .auth_content .content_text{
  padding: 0 30rpx;
  /* display: flex; */
  /* flex-direction: row; */
}
.authorize_box .authorize .auth_content .content_text input{
  display: inline-block;
  vertical-align: bottom;
}

.authorize_box .authorize .auth_content .content_text .underline{
  text-decoration: underline;
}
.authorize_box .authorize .auth_content .content_text .variety{
  text-decoration: underline;
  min-width: 100rpx;
}

.authorize_box .authorize .auth_content .date{
  text-align: right;
  padding-right: 14rpx;
}

.button_box{
  margin-top: 70rpx;
  padding: 0 39rpx;
}

.button_box .margin_top{
  margin-top: 31rpx;
}
