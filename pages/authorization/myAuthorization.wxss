.container{
  height: 100vh;
  background-color: #f5f7f6;
}
.container .image{
  width: 41rpx;
}
.block{
  height: 20rpx;
  width: 750rpx;
}
/* 我的授权content样式 */
.mysqcontent{
  padding: 0 47rpx;
}
.mysqcontent .mysq_item{
  height: 188rpx;
  display: flex;
  font-size: 26rpx;
  margin-bottom: 41rpx;
}
.mysqcontent .mysq_item .item_left_pic{
  width: 290rpx;
  height: 178rpx;
  margin-top: 10rpx;
}

.mysqcontent .mysq_item .mysq_info_box{
  padding-left: 29rpx;
}
.mysqcontent .mysq_item .mysq_info_box .company{
  color: #000201;
  line-height: 46rpx;
}
.mysqcontent .mysq_item .mysq_info_box .area{
  color: #575757;
  margin-top: 10rpx;
  line-height: 26rpx;
}
.mysqcontent .mysq_item .mysq_info_box .view_sqbook_box{
  display: flex;
  margin-top: 18rpx;
  align-items: center;
  height: 46rpx;
  padding-right: 20rpx;
  justify-content: space-between;
}
.mysqcontent .mysq_item .mysq_info_box .view_sqbook_box .view_sqbook{
  display: flex;
  height: 26rpx;
  align-items: center;
}
.mysqcontent .mysq_item .mysq_info_box .view_sqbook_box .cancle{
  /* width: ; */
  /* height: 36rpx;
  width: 36rpx; */
  color: #707070;
}
.mysqcontent .mysq_item .mysq_info_box .view_sqbook_box image{
  width: 31rpx;
  height: 22rpx;
}
.mysqcontent .mysq_item .mysq_info_box .view_sqbook_box .view_sqbook{
  color: #e2af00;
  line-height: 26rpx;
  padding-left: 14rpx;
}
/* 下方加载样式 */
.loading{
  text-align: center;
  padding: 10rpx 0;
}
.hint{
  text-align: center;
  padding: 0 0 10rpx;
  font-size: 26rpx;
  color: #707070;
}