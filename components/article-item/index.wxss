/* components/article-item/index.wxss */
.item {
  display: flex;
  justify-content: space-between;
  /* border: 1px solid gray; */
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e7f0ea;
}

.item .item_pic {
  width: 290rpx;
  height: 183rpx;
  padding-top: 8rpx;
}

.item .item_text {
  width: 364rpx;
  /* background-color: #58bc58; */
  color: #555756;
}

.item .item_text .title {
  font-size: 26rpx;
  font-weight: 600;
  color: #010302;
  line-height: 42rpx;
  margin-bottom: 15rpx;

  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.item .item_text .text {
  font-size: 20rpx;
  font-weight: 500;
  line-height: 34rpx;
  width: 364rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}